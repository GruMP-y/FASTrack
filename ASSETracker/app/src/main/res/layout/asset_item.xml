<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_asset_item"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        card_view:cardMaxElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/asset_list_accent"
                android:layout_width="75dp"
                android:background="@drawable/round"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/text_icons"
                android:textSize="40dp"
                android:gravity="center"

                 />

            <TextView
                android:id="@+id/asset_item_model_brand"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/asset_list_accent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textColor="@color/primary_text"/>


            <TextView
                android:id="@+id/asset_item_type_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/asset_item_model_brand"
                android:layout_toRightOf="@id/asset_list_accent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <TextView
                android:id="@+id/label_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/asset_item_type_desc"
                android:layout_toRightOf="@id/asset_list_accent"
                android:paddingLeft="16dp"
                android:text="SN : "
                android:textSize="@dimen/abc_text_size_small_material" />

            <TextView
                android:id="@+id/asset_item_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/asset_item_type_desc"
                android:layout_toRightOf="@id/label_serial"
                android:textSize="@dimen/abc_text_size_small_material" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/asset_item_type_desc"
                android:layout_toRightOf="@id/asset_item_serial"
                android:textSize="@dimen/abc_text_size_small_material"
                android:paddingLeft="5dp"
                android:text="|"/>

            <TextView
                android:id="@+id/label_asset_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/asset_item_type_desc"
                android:layout_toRightOf="@id/asset_item_serial"
                android:paddingLeft="15dp"
                android:text="AT: "
                android:textSize="@dimen/abc_text_size_small_material" />

            <TextView
                android:id="@+id/asset_item_asset_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/asset_item_type_desc"
                android:layout_toRightOf="@id/label_asset_tag"
                android:textSize="@dimen/abc_text_size_small_material" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>